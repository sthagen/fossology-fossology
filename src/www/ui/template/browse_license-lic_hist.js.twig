function createLicHistTable() {

  tableColumns = [
      {"sTitle": "{{ "Scanner Count"|trans }}", "sClass": "right", "sWidth": "5%", "bSearchable": false, "sType": "num-html"},
      {"sTitle": "{{ "Concluded Count"|trans }}", "sClass": "right", "sWidth": "5%", "bSearchable": false, "sType": "num-html"},
      {"sTitle": "{{ "License Name"|trans }} <img src='images/info_16.png' title='{{ "Click on the license name to search for where the license is found in the file listing."|trans}}' alt='' class='info-bullet'/>", "sClass": "left", "mRender": dressContents}
  ];

  tableSorting = [
      [0, "desc"],
      [1, "desc"],
      [2, "desc"]
  ];

  tableLanguage = {
      "sInfo": "Showing _START_ to _END_ of _TOTAL_ licenses",
      "sSearch": "_INPUT_ <button class=\"btn btn-default btn-sm\" style=\"vertical-align:top;margin:1px;\" onclick=\"clearSearchLicense()\" title=\"{{ 'Clear license filter'|trans }}\">{{ "Clear"|trans }}</button>",
      "sLengthMenu": "{{ 'Display'|trans }} <select class=\"form-control-sm\"><option value=\"10\">10</option><option value=\"25\">25</option><option value=\"50\">50</option><option value=\"100\">100</option></select> {{ 'licenses'|trans }}"
  };

  {% if tableDataJson is not empty %}
    licHistTableConfig = {
      "aaData": {{ tableDataJson }},
      "aoColumns": tableColumns,
      "aaSorting": tableSorting,
      "iDisplayLength": 25,
      "sPaginationType": "listbox",
      "oLanguage": tableLanguage
    };
    dTable=$('#lichistogram').dataTable(licHistTableConfig);
  {% endif %}
}

function createReuseReportTable() {
  var reuseReportTableConfig = {
    "ajax": {
      "url":"?mod=ajax_reuse_report&upload={{ uploadId }}",
      "type": "GET",
      "cache": "true"
    },
    "columns": [
      {"data": "title"},
      {"data": "value"}
    ],
    "paging": false,
    "ordering": false,
    "info": false,
    "searching": false
  };
  return $('#reuseTable').dataTable(reuseReportTableConfig);
}

function dressContents(data, type, full) {
  if (type === 'display') {
    // data = [licenseShortName, rfId, isMain]
    var licenseName = data[0];
    var licenseId = data[1];
    var isMain = data[2];
    var uploadId = {{ uploadId }};

    var nameLink = '<a href="#" onclick="filterScan(' + licenseId + ',\'scan\')">' +
                     licenseName +
                   '</a>';

    if (full[1] > 0) {
      if (isMain) {
        var tooltip = "This is a main license for the upload. Click to discard selection.";
        var star = ' <a href="javascript:;" onclick="removeMainLicenseHist(' + uploadId + ',' + licenseId + ');">' +
                    '<img src="images/icons/star_filled_16.png" alt="mainLicense" title="' + tooltip + '" border="0"/>' +
                  '</a>';
      } else {
        var tooltip = "Click to select this concluded license as a main license for the upload.";
        var star = ' <a href="javascript:;" onclick="makeMainLicenseHist(' + uploadId + ',' + licenseId + ');">' +
                    '<img src="images/icons/star_16.png" alt="noMainLicense" title="' + tooltip + '" border="0"/>' +
                  '</a>';
      }
      return nameLink + star;
    } else {
      return nameLink;
    }
  }
  return data;
}
